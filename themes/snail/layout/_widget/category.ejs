<!-- Categories -->
<% if (site.categories.length){ %>
    <h5><%= __('categories') %></h5>
    <div class="widget">
      <ul>
        <% site.categories.map(function(category){ %>
          <a href="categories/#<%= category.name %>"><li><%= category.name %></li></a>
        <% }) %>
      </ul>
    </div>
<% } %>